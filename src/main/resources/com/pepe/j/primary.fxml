<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="405.0" prefWidth="425.0" spacing="20.0" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pepe.j.PrimaryController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Login" />
      <HBox prefHeight="37.0" prefWidth="385.0">
         <children>
            <Label text="Usuario" />
            <TextField fx:id="txtUsername" />
         </children>
      </HBox>
      <HBox prefHeight="42.0" prefWidth="385.0">
         <children>
            <Label text="Password" />
            <TextField fx:id="txtPassword" />
         </children>
      </HBox>
      <Button fx:id="primaryButton" onAction="#switchToSecondary" onMouseEntered="#cambioAmayuscula" onMouseExited="#cambioAminuscula" text="Ingresar" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
